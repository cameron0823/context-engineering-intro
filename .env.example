# Database Configuration
DATABASE_URL=postgresql://treeservice:password@localhost:5432/treeservice_db
TEST_DATABASE_URL=postgresql://treeservice:password@localhost:5432/treeservice_test_db

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External API Keys
GOOGLE_MAPS_API_KEY=AIza...
QUICKBOOKS_CLIENT_ID=AB...
QUICKBOOKS_CLIENT_SECRET=...
QUICKBOOKS_COMPANY_ID=...
QUICKBOOKS_API_URL=https://sandbox-quickbooks.api.intuit.com
FUEL_API_KEY=...

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# Business Rules Configuration
DEFAULT_OVERHEAD_PERCENT=25.0
DEFAULT_PROFIT_PERCENT=35.0
DEFAULT_SAFETY_BUFFER_PERCENT=10.0
DEFAULT_VEHICLE_RATE_PER_MILE=0.65
DEFAULT_DRIVER_HOURLY_RATE=25.00

# API Rate Limits
GOOGLE_MAPS_DAILY_LIMIT=2500
FUEL_API_HOURLY_LIMIT=100

# Application Settings
APP_NAME="Tree Service Estimating"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# Business Hours (for uptime monitoring)
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=18:00
BUSINESS_TIMEZONE=America/New_York